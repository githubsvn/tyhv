{% extends 'SMAdminBundle::admin.html.twig' %}
{% block body %}
<h2>{{ 'Media Creation'|trans({}, "SMAdminBundle") }}</h2>

<form action="{{ path('admin_media_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Category'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(form.category) }}
                {{ form_widget(form.category) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'File'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(form.file) }}
                {{ form_widget(form.file) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Width'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(form.width) }}
                {{ form_widget(form.width) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Height'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(form.height) }}
                {{ form_widget(form.height) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="optionsCheckbox">{{ 'Active'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
              <label class="checkbox">
                    {{ form_errors(form.active) }}
                    {{ form_widget(form.active, {'attr': {'checked': 'checked'}} ) }}
              </label>
            </div>
        </div>

        <div class="form-actions">
            {{ form_row(form._token) }}
            <button type="submit" class="btn btn-primary">{{ 'Save'|trans({}, "SMAdminBundle") }}</button>
            <a href="{{ path('admin_media', {'page' : 1}) }}" class="btn">{{ 'Back to the list'|trans({}, "SMAdminBundle") }}</a>
        </div>

    </fieldset>
</form>

{% endblock %}