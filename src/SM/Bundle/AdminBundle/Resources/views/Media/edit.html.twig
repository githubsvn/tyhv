{% extends 'SMAdminBundle::admin.html.twig' %}
{% block body %}
<h2>{{ 'Media Edit'|trans({}, "SMAdminBundle") }}</h2>

<form action="{{ path('admin_media_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Category'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(edit_form.category) }}
                {{ form_widget(edit_form.category) }}
            </div>
        </div>

        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Image'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                <image src="/web/uploads/{{ entity.name}}" width="100px" height="100px"/>
                <div style="display: none;">
                    {{ form_widget(edit_form.name) }}
                </div>
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'File'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(edit_form.file) }}
                {{ form_widget(edit_form.file) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Width'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(edit_form.width) }}
                {{ form_widget(edit_form.width) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Height'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(edit_form.height) }}
                {{ form_widget(edit_form.height) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="optionsCheckbox">{{ 'Active'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
              <label class="checkbox">
                    {{ form_errors(edit_form.active) }}
                    {{ form_widget(edit_form.active) }}
              </label>
            </div>
        </div>

        <div class="form-actions">
            {{ form_row(edit_form._token) }}
            <button type="submit" class="btn btn-primary">{{ 'Save'|trans({}, "SMAdminBundle") }}</button>
            <a href="{{ path('admin_media', {'page' : 1}) }}" class="btn">{{ 'Back to the list'|trans({}, "SMAdminBundle") }}</a>
        </div>

    </fieldset>
</form>

{% endblock %}