{% extends 'SMAdminBundle::admin.html.twig' %}
{% block body %}
<h1>{{ 'Config Edit'|trans({}, "SMAdminBundle") }}</h1>

<form action="{{ path('admin_config_update', {'id' : entity.id}) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
     <fieldset>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Name'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(edit_form.name) }}
                {{ form_widget(edit_form.name) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Value'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(edit_form.value) }}
                {{ form_widget(edit_form.value) }}
            </div>
        </div>
        <div class="form-actions">
            {{ form_row(edit_form._token) }}
            <button type="submit" class="btn btn-primary">{{ 'Save'|trans({}, "SMAdminBundle") }}</button>
            <a href="{{ path('admin_config') }}" class="btn">{{ 'Back to the list'|trans({}, "SMAdminBundle") }}</a>
        </div>
     </fieldset>
</form>
{% endblock %}


