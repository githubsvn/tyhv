{% extends 'SMAdminBundle::admin.html.twig' %}
{% block body %}
<h2>{{ 'Config Creation'|trans({}, "SMAdminBundle") }}</h2>


<form action="{{ path('admin_config_create') }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <fieldset>

        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Name'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(form.name) }}
                {{ form_widget(form.name) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Value'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(form.value) }}
                {{ form_widget(form.value) }}
            </div>
        </div>

        <div class="form-actions">
            {{ form_row(form._token) }}
            <button type="submit" class="btn btn-primary">{{ 'Save'|trans({}, "SMAdminBundle") }}</button>
            <a href="{{ path('admin_config') }}" class="btn">{{ 'Back to the list'|trans({}, "SMAdminBundle") }}</a>
        </div>

    </fieldset>
</form>

{% endblock %}