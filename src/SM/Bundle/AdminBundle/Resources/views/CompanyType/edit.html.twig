{% extends 'SMAdminBundle::admin.html.twig' %}
{% block body %}
<h1>Company type creation</h1>

<form action="{{ path('admin_companytype_edit', {'id' : entity.id}) }}" method="post" {{ form_enctype(form) }} class="form-horizontal">
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="input01">{{ form_label(form.status) }}</label>
            <div class="controls">
                {{ form_errors(form.status) }}
                {{ form_widget(form.status) }}
            </div>
        </div>

        <hr />

        <div class="tabbable"> <!-- Only required for left/right tabs -->
            <ul class="nav nav-tabs">
                  {% set isActive = 1 %}
                  {% for lang in langList %}
                      {% if isActive == 1%}
                          <li class="active"><a href="#tab{{ lang.id }}" data-toggle="tab">{{ lang.name }}</a></li>
                      {% else %}
                          <li><a href="#tab{{ lang.id }}" data-toggle="tab">{{ lang.name }}</a></li>
                      {% endif %}
                      {% set isActive = 2 %}
                  {% endfor %}
            </ul>
            <div class="tab-content">
                {% set isActive = 1 %}
                {% for lang in langList %}
                    {% set currentAL = null %}
                    {% for ctLanguage in form.companytype_languages%}
                        {% if ctLanguage.vars.value.language.id == lang.id %}
                            {% set currentAL = ctLanguage %}
                        {% endif%}
                    {% endfor %}
                    {% if isActive == 1%}
                        <div class="tab-pane active" id="tab{{ lang.id }}">
                    {% else %}
                        <div class="tab-pane" id="tab{{ lang.id }}">
                    {% endif %}
                            <fieldset>
                                {% if currentAL is not null %}
                                <div class="control-group">
                                    <label class="control-label" for="input01">{{ form_label(currentAL.name) }}</label>
                                    <div class="controls">
                                        {{ form_errors(currentAL.name) }}
                                        {% if defaultLanguage.name == currentAL.vars.value.language.name %}
                                            {{ form_widget(currentAL.name, {'attr': {'required': 'required'}}) }}
                                        {% else %}
                                            {{ form_widget(currentAL.name) }}
                                        {% endif %}
                                    </div>
                                </div>
                                {% endif%}
                            </fieldset>
                        </div>
                    {% set isActive = 2 %}
               {% endfor %}
            </div>
        </div>

        <div class="form-actions">
            {{ form_row(form._token) }}
            <button type="submit" class="btn btn-primary">Save changes</button>
            <a href="{{ path('admin_companytype', {'page' : 1}) }}" class="btn">Back To List</a>
        </div>

    </fieldset>
</form>

{% endblock %}