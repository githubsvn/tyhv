{% extends 'SMAdminBundle::layout.html.twig' %}
{% block body %}
<h1>User edit</h1>

<form action="{{ path('admin_user_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="form-horizontal">
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Username'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(edit_form.username) }}
                {{ form_widget(edit_form.username) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Fullname'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(edit_form.fullname) }}
                {{ form_widget(edit_form.fullname) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Current Password'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(edit_form.currentPassword) }}
                {{ form_widget(edit_form.currentPassword) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Password'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(edit_form.password.password) }}
                {{ form_widget(edit_form.password.password) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Repeat Password'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(edit_form.password.confirm) }}
                {{ form_widget(edit_form.password.confirm) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Email'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(edit_form.email) }}
                {{ form_widget(edit_form.email) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Roles'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(edit_form.role_collection) }}
                {{ form_widget(edit_form.role_collection) }}
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="input01">{{ 'Group'|trans({}, "SMAdminBundle") }}</label>
            <div class="controls">
                {{ form_errors(edit_form.group) }}
                {{ form_widget(edit_form.group) }}
            </div>
        </div>
        <div class="form-actions">
            {{ form_row(edit_form._token) }}
            <button type="submit" class="btn btn-primary">{{ 'Save'|trans({}, "SMAdminBundle") }}</button>
            <a class="btn" href="{{ path('admin_user') }}">{{ 'Back to the list'|trans({}, "SMAdminBundle") }}</a>
        </div>

    </fieldset>

</form>


{% endblock %}