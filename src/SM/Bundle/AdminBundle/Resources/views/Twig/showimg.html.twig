{% for img in arrImgs %}
    {% if img != '' %}
        <div style="width: 100px; height: 100px; float: left">
            <img src="{{imgPath~'/'~img}}" />
        </div>
        <div>
            <input type="checkbox" value="{{img}}" name="delImgs[]"> Checked if you want to delete this image.
        </div>
        <div style="clear: both;"></div>
    {% endif %}
{% endfor %}