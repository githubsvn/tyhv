{% extends 'SMAdminBundle::admin.html.twig' %}
{% block body%}
<script type="text/javascript">
    $(document).ready(function() {
        $('#sortTable').dataTable({
            "bPaginate": false,
            "bLengthChange": false,
            "bFilter": false,
            "bSort": true,
            "bInfo": false,
            "bAutoWidth": true,
            "aaSorting": [ [0,'asc'], [1,'asc'] ],
            "aoColumnDefs": [
                { 'bSortable': false, 'aTargets': [ 2, 3 ] }
            ],
        });
    } );
</script>

<h2>{{ 'Media Category List'|trans({}, "SMAdminBundle") }}</h3>

<div class="btn-group nav">
    <a href="{{ path('admin_mediacategory_new') }}" class="btn btn-primary">{{ 'Create a new entry'|trans({}, "SMAdminBundle") }}</a>
</div>

<table class="table table-bordered table-striped" id="sortTable">
    <thead>
        <tr>
            <th>{{ 'Id'|trans({}, "SMAdminBundle") }}</th>
            <th>{{ 'Name'|trans({}, "SMAdminBundle") }}</th>
            <th>{{ 'Created Time'|trans({}, "SMAdminBundle") }}</th>
            <th>{{ 'Action'|trans({}, "SMAdminBundle") }}</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('admin_mediacategory_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.name }}</td>
            <td>{% if entity.createdat %}{{ entity.createdat|date('Y-m-d H:i:s') }}{% endif %}</td>
            <td>
                <a href="{{ path('admin_mediacategory_show', { 'id': entity.id }) }}"><i class="icon-search"></i>{{ 'Show'|trans({}, "SMAdminBundle") }}</a>
                &nbsp; | &nbsp;
                <a href="{{ path('admin_mediacategory_edit', { 'id': entity.id }) }}"><i class="icon-pencil"></i>{{ 'Edit'|trans({}, "SMAdminBundle") }}</a>
                &nbsp; | &nbsp;
                <a class="delete" rel="{{ path('admin_mediacategory_delete', { 'id': entity.id }) }}"><i class="icon-remove"></i>{{ 'Delete'|trans({}, "SMAdminBundle") }}</a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>

{# Pagination for list #}
{% if lastPage > 1 %}
<div class="pagination" style="text-align: right;">
    <ul>
        <li><a href="{{ path('admin_mediacategory', { 'page': 1 }) }}"><i class="icon-fast-backward"></i></a></li>
        <li><a href="{{ path('admin_mediacategory', { 'page': previousPage }) }}"><i class="icon-backward"></i></a></li>
    {% for page in 1..lastPage %}
      {% if page == currentPage %}
        <li class="active"><a href="{{ path('admin_mediacategory', {'page': page }) }}">{{ page }}</a></li>
      {% else %}
        <li><a href="{{ path('admin_mediacategory', {'page': page }) }}">{{ page }}</a></li>
      {% endif %}
    {% endfor %}
        <li><a href="{{ path('admin_mediacategory', {'page': nextPage }) }}"><i class="icon-forward"></i></a></li>
        <li><a href="{{ path('admin_mediacategory', {'page': lastPage }) }}"><i class="icon-fast-forward"></i></a></li>
    </ul>
</div>
{% endif %}

{% endblock %}