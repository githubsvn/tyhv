{% extends 'SMAdminBundle::admin.html.twig' %}
{% block body %}
<h2>{{ 'Media Category Show'|trans({}, "SMAdminBundle") }}</h2>

<table class="record_properties">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>{{ 'Name'|trans({}, "SMAdminBundle") }}</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>{{ 'Created Time'|trans({}, "SMAdminBundle") }}</th>
            <td>{{ entity.createdat|date('Y-m-d H:i:s') }}</td>
        </tr>
        <tr>
            <td colspan="2" width="100%">
                <a href="{{ path('admin_mediacategory', {'page' : 1}) }}" class="btn">{{ 'Back to the list'|trans({}, "SMAdminBundle") }}</a>
                &nbsp;
                <a href="{{ path('admin_mediacategory_edit', { 'id': entity.id }) }}" class="btn">{{ 'Edit'|trans({}, "SMAdminBundle") }}</a>
            </td>
        </tr>
    </tbody>
</table>
{% endblock %}